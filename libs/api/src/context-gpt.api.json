              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [],
        "servers": [
          {
            "url": "http://localhost:3000"
          }
        ]
      }
    },
